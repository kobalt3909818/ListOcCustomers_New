<Window x:Class="ListOfCustomers_New.Views.Form_EditDepartments"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListOfCustomers_New.Views"
        mc:Ignorable="d"
        Title="Form_EditDepartments" Height="300" Width="500"
        Name="EditDepartmentsWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="76*"/>
            <RowDefinition Height="32*"/>
            <RowDefinition Height="11*"/>
            <RowDefinition Height="38*"/>
            <RowDefinition Height="58*"/>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="23*"/>
        </Grid.RowDefinitions>
        <Label Content="Name:" Grid.Row="3" Margin="100,1,347,3" />
        <Label Content="ID:" Grid.Row="1" Margin="100,0,347,0" />
        <TextBox Name="Box_ID" Text="{Binding ID}" Grid.Row="1" Margin="150,6,285,4"/>
        <TextBox Name="Box_Name" Text="{Binding Name}" Grid.Row="3" Margin="150,6,62,6"/>
        <Button Content="Save" CommandParameter="{x:Reference Name=EditDepartmentsWindow}" Command="{Binding SaveDataCommand}" Grid.Row="5" Margin="352,5,24,6"/>
       
    </Grid>
</Window>
